<!DOCTYPE html>
<html>
<head>
  <title>AptBrokerApp</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <header>
    <p><%= link_to("Please Log In!","/login") if session[:user_id].nil? %></p>

    <p><%= link_to("Log Out #{User.find_by(id: session[:user_id]).first_name}", "/session", method: "delete") unless session[:user_id].nil? %></p>
<% if session[:user_id] %>
 <%= button_to "Home", user_path(session[:user_id]), method: :get  %>
 <%= button_to "Add User", new_user_path, method: :get  %>
 <%= button_to "Add Landlord", new_landlord_path, method: :get  %>
 <%= button_to "Add Apartment", new_apartment_path, method: :get  %>
 <%= button_to "Search Apartments", apartments_path, method: :get  %>
 <%= button_to "Your Account", user_path(session[:user_id]), method: :get  %>
  <%= button_to "All Clients", clients_path, method: :get  %>
 <%= button_to "Add Client", new_client_path, method: :get  %>

<% end %>

  </header>

<%= yield %>

</body>
</html>
